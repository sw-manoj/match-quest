<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drayerlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:paddingLeft="8dp"
     android:paddingRight="8dp"
    android:background="@drawable/buttons">

    
        <RelativeLayout
            android:id = "@+id/match_status_details"
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:paddingTop="8dp"
         	android:paddingBottom="8dp">
				    <RelativeLayout
				        android:id="@+id/matchStatusTeam"
				        android:layout_width="match_parent"
    					android:layout_height="wrap_content"
    					>
								    <TextView
								        android:id="@+id/matchStatusYourTeam"
								        android:layout_width="wrap_content"
								        android:layout_height="wrap_content"
								        android:textColor="#2EFE2E"
								        
								        android:textSize="16sp"
								        android:typeface="sans" 
								        android:singleLine="true"/>
								     <TextView
								        android:id="@+id/matchStatusVs"
								        android:paddingTop="3dp"
								        android:layout_width="wrap_content"
								        android:layout_height="wrap_content"
								        android:textColor="#000000"
								        android:layout_toEndOf="@id/matchStatusYourTeam" 
								        android:layout_toRightOf="@id/matchStatusYourTeam" 
								        android:text="  Vs  "
								        android:textSize="12sp"
								        android:typeface="sans" 
								        android:singleLine="true"/>
								      <TextView
								        android:id="@+id/matchStatusOppoTeam"
								        android:layout_width="wrap_content"
								        android:layout_height="wrap_content"
								        android:textColor="#FF0000"
								        android:layout_below="@id/matchStatusVs"
								        android:textSize="16sp"
								        android:paddingLeft="20dp"
								        android:typeface="sans" 
								        android:singleLine="true"/>
				    </RelativeLayout>
				    
					<RelativeLayout
					    android:id="@+id/matchStatusLocLayout"
					    android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:layout_below="@id/matchStatusTeam">
				     <TextView
				        android:id="@+id/matchStatusLocText"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="Loc : "
				       	android:textColor="#5882FA" 
				        android:textSize="14dp"
				        android:typeface="sans" 
				        android:singleLine="true"/>
				     <TextView
				        android:id="@+id/matchStatusLoc"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_toRightOf="@id/matchStatusLocText"
				       	android:textColor="#555555" 
				        android:textSize="14dp"
				        android:typeface="sans" 
				        android:singleLine="true"/>
				     </RelativeLayout>
				     <RelativeLayout
					    android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:layout_below="@id/matchStatusLocLayout">
				     <TextView
				        android:id="@+id/matchStatusDateText"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="Date : "
				       	android:textColor="#5882FA" 
				        android:textSize="14dp"
				        android:typeface="sans" 
				        android:singleLine="true"/>
				     <TextView
				        android:id="@+id/matchStatusDate"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_toRightOf="@id/matchStatusDateText"
				       	android:textColor="#555555" 
				        android:textSize="14dp"
				        android:typeface="sans" 
				        android:singleLine="true"/>
				     </RelativeLayout>
    </RelativeLayout>
   
    
    <View
             android:layout_width="fill_parent"
             android:layout_height="1dp"
             android:layout_below="@id/match_status_details"
             android:background="#cccccc"/>
    

</RelativeLayout>
