<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/team_edit_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:paddingLeft="16dp"
     android:paddingRight="16dp"
    android:background="@drawable/buttons">
 
    <RelativeLayout
        android:id="@+id/team_edit"
         android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
        <RelativeLayout
            android:layout_toLeftOf="@+id/team_edit_icon_layout"
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:paddingTop="16dp"
         android:paddingBottom="16dp">
    
    <TextView
        android:id="@+id/playerName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        
        android:textSize="20dp"
        android:typeface="sans" 
        android:singleLine="true"/>
     <TextView
        android:id="@+id/playerStatus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/playerName"
       	android:textColor="#555555" 
        android:textSize="14dp"
        android:typeface="sans" 
        android:singleLine="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/team_edit_icon_layout"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true" 
        android:layout_width="wrap_content" 
        android:layout_height="50dp"
        android:clickable="true"
         android:background="@drawable/buttons">
    <ImageView
        android:id="@+id/team_edit_icon"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:src="@drawable/blue_dot"
            android:scaleType="fitCenter"
            
            android:layout_centerInParent="true" 
            />
    </RelativeLayout>
    </RelativeLayout>
    
    <View
             android:layout_width="fill_parent"
             android:layout_height="1dp"
             android:layout_below="@id/team_details"
             android:background="#cccccc"/>
    
 
</RelativeLayout>